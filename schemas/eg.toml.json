{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Eg config file schema",
    "description": "https://github.com/srsudar/eg",
    "x-taplo-info": {
      "authors": ["Emily Grace Seville (https://github.com/EmilySeville7cfg)"],
      "patterns": ["^\\.?egrc$"]
    },
    "type": "object",
    "properties": {
        "eg-config": {
            "description": "The directory options\nhttps://github.com/srsudar/eg#configuration-and-extension",
            "type": "object",
            "properties": {
                "examples-dir": {
                    "description": "The example directory\nhttps://github.com/srsudar/eg#configuration-and-extension",
                    "type": "string",
                    "minLength": 1
                },
                "custom-dir": {
                    "description": "The custom directory\nhttps://github.com/srsudar/eg#configuration-and-extension",
                    "type": "string",
                    "minLength": 1
                },
                "color": {
                    "description": "Enable/disable coloring\nhttps://github.com/srsudar/eg#color",
                    "type": "boolean",
                    "default": false
                },
                "squeeze": {
                    "description": "Enable/disable squeezing empty lines\nhttps://github.com/srsudar/eg#squeezing-blank-lines",
                    "type": "boolean",
                    "default": false
                },
                "pager-cmd": {
                    "description": "The pager command\nhttps://github.com/srsudar/eg#paging",
                    "type": "string",
                    "default": "less -RMFXK"
                }
            },
            "additionalProperties": false
        },
        "color": {
            "description": "The color options\nhttps://github.com/srsudar/eg#color",
            "type": "object",
            "properties": {
                "pound": {
                    "description": "The color of the pound sign before headings\nhttps://github.com/srsudar/eg#color",
                    "type": "string",
                    "minLength": 1
                },
                "heading": {
                    "description": "The color of the text of headings\nhttps://github.com/srsudar/eg#color",
                    "type": "string",
                    "minLength": 1
                },
                "code": {
                    "description": "The color of the anything indented four spaces other than a leading `$`\nhttps://github.com/srsudar/eg#color",
                    "type": "string",
                    "minLength": 1
                },
                "prompt": {
                    "description": "The color of the `$` that is indented four spaces\nhttps://github.com/srsudar/eg#color",
                    "type": "string",
                    "minLength": 1
                },
                "backticks": {
                    "description": "The color of the anything between two backticks\nhttps://github.com/srsudar/eg#color",
                    "type": "string",
                    "minLength": 1
                }
            },
            "additionalProperties": false
        },
        "substitutions": {
            "description": "The substitution options\nhttps://github.com/srsudar/eg#regex-substitutions",
            "type": "object",
            "properties": {
                "remove-indents": {
                    "description": "",
                    "type": "array",
                    "oneOf": [
                        {
                            "minItems": 2,
                            "maxItems": 2,
                            "items": [
                                {
                                    "description": "The pattern\nhttps://github.com/srsudar/eg#regex-substitutions",
                                    "type": "string"
                                },
                                {
                                    "description": "The replacement\nhttps://github.com/srsudar/eg#regex-substitutions",
                                    "type": "string"
                                }
                            ]
                        },
                        {
                            "minItems": 3,
                            "maxItems": 3,
                            "items": [
                            {
                                "description": "The pattern\nhttps://github.com/srsudar/eg#regex-substitutions",
                                "type": "string"
                            },
                            {
                                "description": "The replacement\nhttps://github.com/srsudar/eg#regex-substitutions",
                                "type": "string"
                            },
                            {
                                "description": "Enable/disable multiline mode\nhttps://github.com/srsudar/eg#regex-substitutions",
                                "type": "boolean"
                            }
                        ]}
                    ]
                }
            },
            "additionalProperties": false
        }
    },
    "additionalProperties": false
}
 
